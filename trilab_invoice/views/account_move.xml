<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="assets_common" name="trilab_mm_reports assets" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/trilab_invoice/static/src/scss/layout_boxed.scss"/>
        </xpath>
    </template>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document" name="trilab_report_invoice_document" primary="True">

        <!-- add word buyer above customer block -->
        <xpath expr="//address/../*[1]" position="before">
            <span><b><font style="font-size: 18px;">Buyer:</font></b></span>
        </xpath>

        <!-- add "NET" to the label -->
        <xpath expr="/t/t/div/table/thead/tr/th[4]/span" position="replace">
            <span>Unit price NET</span>
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']/tbody[hasclass('invoice_tbody')]/t/tr/t/td[3]/span" position="replace">
            <span t-esc="line.price_subtotal / line.quantity" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[@name='th_subtotal']" position="replace">
            <th name="th_subtotal" class="text-right">
                <span>NET amount</span>
            </th>
        </xpath>

        <!-- add sale date -->
        <xpath expr="//div[@name='due_date']" position="before">
            <div class="col-auto mw-100 mb-2" t-if="o.x_invoice_sale_date" name="x_invoice_sale_date">
                <strong>Sale date:</strong>
                <p class="m-0" t-field="o.x_invoice_sale_date"/>
            </div>
        </xpath>

        <!-- correction invoice titles -->
        <span t-if="o.type == 'out_refund'" position="replace">
            <span t-if="o.type == 'out_refund'">Correction Invoice</span>
        </span>

        <span t-if="o.type == 'in_refund'" position="replace">
            <span t-if="o.type == 'in_refund'">Vendor Correction Invoice</span>
        </span>

        <div name="reference" position="attributes">
            <attribute name="t-if">not o.type.endswith('_refund') and o.ref</attribute>"
        </div>

        <div name="reference" position="after">
            <div class="col-auto mw-100 mb-2" t-if="o.type.endswith('_refund') and o.ref">
                <strong>Correction reason:</strong>
                <p class="m-0" t-field="o.ref"/>
            </div>
            <div class="col-auto mw-100 mb-2" t-if="o.type.endswith('_refund') and o.ref">
                <strong>Corrected invoice:</strong>
                <p class="m-0" t-esc="o.refund_invoice_id.name"/>
            </div>
            <div class="col-auto mw-100 mb-2" t-if="o.type.endswith('_refund') and o.ref">
                <strong>Original invoice date:</strong>
                <p class="m-0" t-esc="o.refund_invoice_id.invoice_date"/>
            </div>
        </div>

        <!-- correction invoice hide original lines -->
        <table name="invoice_line_table" position="attributes">
            <attribute name="t-if">o.type not in ['in_refund', 'out_refund']</attribute>
        </table>

        <!-- new detail tables -->
        <table name="invoice_line_table" position="after">
            <table class="table table-sm correction-table" name="invoice_lines_before_correction" t-if="o.type in ['in_refund', 'out_refund']">
                <thead class="before-correction">
                    <tr class="table-title">
                        <th t-att-colspan="6 if display_discount else 5"><span>Items prior to correction:</span></th>
                    </tr>
                    <tr class="bg-200">
                        <t t-set="colspan" t-value="6"/>
                        <th name="th_description" class="text-left"><span>Description</span></th>
                        <th name="th_quantity" class="text-right"><span>Quantity</span></th>
                        <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price NET</span></th>
                        <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span>Disc.%</span>
                            <!-- TODO: remove in master -->
                            <t t-set="colspan" t-value="colspan+1"/>
                        </th>
                        <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                        <th name="th_subtotal" class="text-right">
                            <span>NET amount</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-foreach="o.original_invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                    <td class="text-right">
                                    <span t-field="line.quantity"/>
                                    <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                </td>
                                <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-esc="line.price_subtotal_inverse / line.quantity" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                </td>
                                <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-field="line.discount"/>
                                </td>
                                <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                </td>
                                <td class="text-right o_price_total">
                                    <span t-field="line.price_subtotal_inverse" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>

                <thead class="after-correction">
                    <tr class="table-title">
                        <th t-att-colspan="6 if display_discount else 5"><span>Items after correction:</span></th>
                    </tr>
                    <tr class="bg-200">
                        <t t-set="colspan" t-value="6"/>
                        <th name="th_description" class="text-left"><span>Description</span></th>
                        <th name="th_quantity" class="text-right"><span>Quantity</span></th>
                        <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price NET</span></th>
                        <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span>Disc.%</span>
                            <t t-set="colspan" t-value="colspan+1"/>
                        </th>
                        <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                        <th name="th_subtotal" class="text-right">
                            <span>NET amount</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-foreach="o.corrected_invoice_line_ids.sorted(key=lambda l: (-l.sequence, -l.id), reverse=True)" t-as="line">

                        <tr class="">
                            <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                <td class="text-right">
                                <span t-field="line.quantity"/>
                                <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                            </td>
                            <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span t-esc="line.price_subtotal_inverse / line.quantity" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                            </td>
                            <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span t-field="line.discount"/>
                            </td>
                            <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                            </td>
                            <td class="text-right o_price_total">
                                <span t-field="line.price_subtotal_inverse" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </table>


        <!-- tax summary table -->
        <xpath expr="//div[@id='total']" position="replace">
            <t t-set="vat_to_pln" t-value="o.currency_id.name != 'PLN' and o.company_id.currency_id.name == 'PLN'" />
            <div id="total" class="row">
                <div t-attf-class="#{'col-7 offset-3' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto mb16">
                    <table class="table table-sm table-condensed" style="page-break-inside: avoid;">
                        <tr class="border-black text-right">
                            <td>
                                <strong>VAT rate</strong>
                            </td>
                            <td>
                                <strong>NET amount</strong>
                            </td>
                            <td>
                                <strong>VAT amount</strong>
                            </td>
                            <td t-if="vat_to_pln">
                                <strong>VAT amount in PLN</strong>
                            </td>
                            <td>
                                <strong>GROSS amount</strong>
                            </td>
                        </tr>
                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                            <t t-set="netto" t-value="amount_by_group[2]"/>
                            <t t-set="vat" t-value="amount_by_group[1]"/>
                            <t t-set="brutto" t-value="netto + vat"/>
                            <tr style="border-bottom: 1px solid #dddddd;">
                                <td style="white-space: nowrap;">
                                    <span t-esc="amount_by_group[0]"/>
                                </td>
                                <td class="text-right" style="white-space: nowrap;">
                                    <span t-esc="amount_by_group[4]"/>
                                </td>
                                <td class="text-right" style="white-space: nowrap;">
                                    <span t-esc="amount_by_group[3]"/>
                                </td>
                                <td class="text-right" style="white-space: nowrap;" t-if="vat_to_pln">
                                    <span t-esc="amount_by_group[7]"/>
                                </td>
                                <td class="text-right" style="white-space: nowrap;">
                                    <span t-esc="brutto"
                                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                        <tr class="border-black o_total" style="border-bottom: 1px solid #000000;">
                            <td>
                                <strong>Total</strong>
                            </td>
                            <td class="text-right" style="white-space: nowrap;">
                                <strong>
                                    <span t-esc="o.x_invoice_amount_summary['base']" />
                                </strong>
                            </td>
                            <td class="text-right" style="white-space: nowrap;">
                                <strong>
                                    <span t-esc="o.x_invoice_amount_summary['amount']" />
                                </strong>
                            </td>
                            <td class="text-right" style="white-space: nowrap;" t-if="vat_to_pln">
                                <strong>
                                    <span t-esc="o.x_invoice_amount_summary['in_pln']" />
                                </strong>
                            </td>

                            <td class="text-right" style="white-space: nowrap;">
                                <strong>
                                    <span t-esc="o.x_invoice_amount_summary['total']" />
                                </strong>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </xpath>

        <!-- bank transfer details -->
        <p name="payment_term" position="after">
			<t t-if="o.invoice_partner_bank_id" name="partner_bank_id">
				Bank Account Number: <span t-field="o.invoice_partner_bank_id.acc_number"/>
                <span t-if="o.currency_id.name != 'PLN' and o.invoice_partner_bank_id.bank_bic">
                    &amp;bull;&amp;nbsp;BIC/SWIFT: <span t-field="o.invoice_partner_bank_id.bank_bic"/>
                </span>
			</t>
        </p>

    </template>

    <template id="report_invoice_document_with_payments" inherit_id="trilab_invoice.report_invoice_document" primary="True">
        <xpath expr="//div[@id='total']/div/table" position="inside">
            <t t-set="payments_vals" t-value="o._get_reconciled_info_JSON_values()"/>
            <t t-foreach="payments_vals" t-as="payment_vals">
                <tr>
                    <td>
                        <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                    </td>
                    <td class="text-right">
                        <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
            </t>
            <t t-if="len(payments_vals) > 0">
                <tr class="border-black">
                    <td><strong>Amount Due</strong></td>
                    <td class="text-right">
                         <span t-field="o.amount_residual"/>
                    </td>
                </tr>
            </t>
        </xpath>
    </template>

    <template id="report_invoice" inherit_id="account.report_invoice">
        <t t-call="account.report_invoice_document" t-lang="lang" position="replace">
            <t t-call="trilab_invoice.report_invoice_document" t-lang="lang" />
        </t>
    </template>

    <template id="report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
        <t t-call="account.report_invoice_document_with_payments" t-lang="lang" position="replace">
            <t t-call="trilab_invoice.report_invoice_document_with_payments" t-lang="lang"/>
        </t>
    </template>

</odoo>
