<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- include vat number in report -->
    <template id="trilab_include_vat_number_1" inherit_id="web.external_layout_standard" name="external_layout_standard_vat">
        <xpath expr="//div[@name='company_address']" position="after">
            <div name="tax_id" t-if="company.vat"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></div>
        </xpath>
    </template>

    <template id="trilab_include_vat_number_2" inherit_id="web.external_layout_background" name="external_layout_background_vat">
        <xpath expr="//div[hasclass('company_address')]" position="inside">
            <div name="tax_id" t-if="company.vat"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></div>
        </xpath>
    </template>

    <template id="trilab_include_vat_number_3" inherit_id="web.external_layout_boxed" name="external_layout_boxed_vat">
        <xpath expr="//div[@name='company_address']" position="after">
            <div name="tax_id" t-if="company.vat"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></div>
        </xpath>

        <xpath expr="//div[hasclass('footer')]/div/ul" position="replace">
            <ul class="list-inline mb4">
                <li t-if="company.phone" class="list-inline-item"><i class='fa fa-phone fa-fw' role="img" aria-label="Phone" title="Phone"/> <span t-field="company.phone"/></li>
                <li t-if="company.email" class="list-inline-item"><i class='fa fa-envelope fa-fw' role="img" aria-label="Email" title="Email"/> <span t-field="company.email"/></li>
                <li t-if="company.website" class="list-inline-item"><i class='fa fa-globe' role="img" aria-label="Website" title="Website"/> <span t-field="company.website"/></li>
                <li t-if="company.vat" class="list-inline-item"><i class="fa fa-building-o" role="img" aria-label="Fiscal number"/> <t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
            </ul>
        </xpath>

    </template>

    <template id="trilab_include_vat_number_4" inherit_id="web.external_layout_clean" name="external_layout_clean_vat">
        <xpath expr="//div[@name='company_address']" position="after">
            <div name="tax_id" t-if="company.vat"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></div>
        </xpath>
    </template>

</odoo>
