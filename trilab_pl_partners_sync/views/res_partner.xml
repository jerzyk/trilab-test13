<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_pl_sync" model="ir.ui.view">
        <field name="name">view_partner_form_pl_sync</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="company_type" position="after">
                <field name="gus_nip" placeholder="Type NIP to load data from GUS" attrs="{'invisible': ['|', ('is_company','=', False), ('id', '!=', False)]}" />
            </field>

            <field name="vat" position="after">
                <field name="regon"/>
                <field name="krs"/>
                <field name="nip_state" attrs="{'invisible': [('nip_state', '=', False)], 'readonly': 1}"/>
                <field name="nip_check_date" attrs="{'invisible': [('nip_check_date', '=', False)], 'readonly': 1}"/>
                <field name="gus_update_date" attrs="{'invisible': [('gus_update_date', '=', False)], 'readonly': 1}"/>
            </field>

            <sheet position="before">
                <header attrs="{'invisible': [('id', '=', False)]}">
                    <button name="check_nip" string="Check NIP" type="object" class="oe_highlight"/>
                    <button name="update_gus_data" string="Update GUS Data" type="object" class="oe_highlight"/>
                </header>
            </sheet>
        </field>
    </record>

    <record id="view_partner_tree_inherit" model="ir.ui.view">
        <field name="name">view_partner_tree_inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="regon"/>
                <field name="krs"/>
                <field name="nip_state"/>
                <field name="nip_check_date" attrs="{'invisible': [('nip_check_date', '=', False)], 'readonly': 1}"/>
                <field name="gus_update_date" attrs="{'invisible': [('gus_update_date', '=', False)], 'readonly': 1}"/>
            </field>
        </field>
    </record>

    <record id="check_nip_gus_form" model="ir.ui.view">
        <field name="name">check_nip_gus_form</field>
        <field name="model">res.partner.check.nip</field>
        <field name="arch" type="xml">
            <form>
                <field name="res_partner_ids" nolabel="1" readonly="1" mode="tree" />
            </form>
        </field>
    </record>

    <act_window
            id="check_nip_act"
            res_model="res.partner.check.nip"
            binding_model="res.partner"
            binding_views="list,form"
            target="new"
            view_mode="form"
            context="{'mode': 'nip'}"
            name="Check NIP"/>

    <act_window
            id="check_gus_act"
            res_model="res.partner.check.nip"
            binding_model="res.partner"
            binding_views="list,form"
            target="new"
            view_mode="form"
            context="{'mode': 'gus'}"
            name="Update data from GUS" />

</odoo>
